{
    "name": "Python with pyenv",
    "dockerFile": "Dockerfile",
    "remoteUser": "vscode",
    "postCreateCommand": "pip3 install --user -r https://gist.githubusercontent.com/krokrob/53ab953bbec16c96b9938fcaebf2b199/raw/9035bbf12922840905ef1fbbabc459dc565b79a3/minimal_requirements.txt",
    "customizations": {
        "vscode": {
            "settings": {
                "python.pythonPath": "/home/vscode/.pyenv/shims/python",
                "terminal.integrated.shellArgs": ["--login", "-b"]
            },
            "extensions": [
                "ms-python.python",
                "KevinRose.vsc-python-indent",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter"
            ]
        }
    }
}
